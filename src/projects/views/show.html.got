{{if .project.Id}}
{{ if .current_user.Admin }}
<section class="admin-bar-actions">
<a class="button small" href="{{ .project.URLUpdate }}">Edit Post</a>
</section>
{{ end }}
<div class="col-sm-12 col-md-12 col-lg-12">
<img src="/assets/images/projects/{{.project.Image}}.screen.png" class="img-responsive" />
<h1 >{{.project.Name}}</h1>
</div>

<section class="narrow">
<div class="text">
{{ sanitize .project.Description }}
</div>
</section>

{{end}}
